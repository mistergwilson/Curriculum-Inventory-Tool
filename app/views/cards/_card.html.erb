<div class="box" style="background-color: <%= card.color %>">
	<% if card.image_file_name == nil %>
		<%= link_to (image_tag "SU_Logo_Thumbnail.png"), card %>
	<% else %>
		<%= link_to (image_tag card.image(:medium)), card %> 
	<% end %>   
	<b><%= card.title %></b>
	<br>
	<%= card.description %>
	<br>
	<b>Subject Area: </b><%= card.subject %>
	<br>
	<b>Content Tags: </b> <%= card.tags %>
	<br>
	<b>Category: </b> <%= card.category %>
	<br>
	<br>
	<% if current_user == card.user %>
		<span class="icon-edit"></span>
    	<%= link_to 'Edit', edit_card_path(card) %>
    	<span class="icon-trash"></span>
